<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/book_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".ui.books.BookSaveUpdate" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBookSaveUpdate"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnImageBookSaveUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:text="Imagen" />

                <EditText
                    android:id="@+id/bookSaveUpdateDatePublication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded"
                    android:ems="10"
                    android:hint="Fecha Publicación"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#838383"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/bookSaveUpdatePages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded"
                    android:ems="10"
                    android:hint="Número de páginas"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#838383"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/bookSaveUpdateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Título libro"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/bookSaveUpdateAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Nombre autor"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/bookSaveUpdateGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Genero del libro"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/bookSaveUpdateISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="ISBN"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/bookSaveUpdatePublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Editor"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/bookSaveUpdateDescription"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Descripción del libro"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="#838383"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnBookSaveUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_700"
            android:text="Guardar/Actualizar" />


    </LinearLayout>
</RelativeLayout>
